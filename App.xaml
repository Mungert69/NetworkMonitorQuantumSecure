<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NetworkMonitor.Maui.Utils;assembly=NetworkMonitorMaui"
             x:Class="QuantumSecure.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
              <local:BoundsConverter x:Key="BoundsConverter"/>
              <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
              <local:ToggledEventArgsConverter x:Key="ToggledEventArgsConverter"/>
     
        </ResourceDictionary>
    </Application.Resources>
</Application>
